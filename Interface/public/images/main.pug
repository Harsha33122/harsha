      #style-section.selection-section.content-section
        .item-list
          .item(onclick="changeStyle('New-Kint')")
            img(src="/images/k1.png", alt="New-Kint Style")
            p New-Kint
          .item(onclick="changeStyle('Kent-Collar')")
            img(src="/images/k2.png", alt="Kent Collar Style")
            p Kent-Collar
          .item(onclick="changeStyle('button-down')")
            img(src="/images/k3.png", alt="Button Down Style")
            p Button Down
          .item(onclick="changeStyle('Stand-up')")
            img(src="/images/k5.png", alt="Stand-up Style")
            p Stand-up
          .item(onclick="changeStyle('wing-collar')")
            img(src="/images/k4.png", alt="Wing Collar Style")
            p Wing-collar
          .item(onclick="changeStyle('Rounded-collar')")
            img(src="/images/k6.png", alt="Rounded Collar Style")
            p Rounded-collar
          .item(onclick="changeStyle('single cuff-1')")
            img(src="/images/k7.png", alt="Single Cuff 1 Style")
            p Single Cuff 1
          .item(onclick="changeStyle('single cuff-2')")
            img(src="/images/k8.png", alt="Single Cuff 2 Style")
            p Single Cuff 2
          .item(onclick="changeStyle('short-hands')")
            img(src="/images/k12.png", alt="short-hands")
            p Half sleeves
          .item(onclick="changeStyle('no-pocket')")
            img(src="/images/k11.png", alt="no-pocket")
            p no-pocket
          .item(onclick="changeStyle('pocket')")
            img(src="/images/k10.png", alt="pocket")
            p pocket

      .sidebar
        .sidebar-item.selected(onclick="switchSection('fabric-section')")
          i.fas.fa-tshirt Fabric
        .sidebar-item(onclick="switchSection('style-section')")
          i.fas.fa-paint-brush Style
        .sidebar-item(onclick="location.href='ai.html';") Others

      .shirt-preview
        img#shirt-preview-image(src="/images/default.png", alt="Shirt Preview")
        p#shirt-description Selected Shirt: Default
        button.next-button next
        p.order-info Customize your shirt to your liking!

    script(src="/js/shirts_scripts.js")
