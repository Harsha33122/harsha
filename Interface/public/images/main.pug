doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Shirt Customization
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    link(rel="stylesheet" href="/css/c_styles.css")

  body
    section#header
      div
        .img
          img(src="/images/fs-removebg-preview.jpg", width="80px", height="80px", alt="")
        div
          ul#nav
            li: a(href="home.html") Home
            li: a(href="contact.html") Customize
            li#cart
              a(href="cart.html")
                i.fa-solid.fa-cart-shopping
              span#cart-badge 0 <!-- Cart item count -->
            button.open-btn(onclick="toggleSidebar()") â˜°
        #sideba.sideba
          .sideba-header
            h2 Panel
            button.close-btn(onclick="toggleSidebar()") &#10006;
          ul
            li: a(href="./profilr.html") 
              i.fas.fa-users Profile
            li: a(href="/") 
              i.fas.fa-home Home
            li: a(href="./cart.html") 
              i.fas.fa-shopping-cart cart
            li: a(href="/cutomization") 
              i.fas.fa-paint-brush Customization
            li: a(href="./about us.html") 
              i.fas.fa-file-alt About Us
            li: a(href="./contact.html") 
              i.fas.fa-envelope Contact
            li#lgo: a(href="./home.html") 
              i.fas.fa-sign-out-alt Logout

    .container
      #fabric-section.selection-section.content-section.active
        .search-container
          input.search-bar(type="text", placeholder="Search fabrics by name or property")
          button.filter-button
            i.fas.fa-sliders-h
        .item-list
          .item(onclick="changeFabric('poplin-white')")
            img(src="https://d1fufvy4xao6k9.cloudfront.net/dimg/fabric/shirt/699_huge_c300.jpg", alt="Poplin White")
            p Poplin White
          .item(onclick="changeFabric('poplin-mid-blue')")
            img(src="https://d1fufvy4xao6k9.cloudfront.net/dimg/fabric/shirt/1725_huge_c300.jpg", alt="Poplin Mid Blue")
            p Poplin Mid Blue
          .item(onclick="changeFabric('poplin-cotton-blue')")
            img(src="https://d1fufvy4xao6k9.cloudfront.net/dimg/fabric/shirt/2740_huge_c300.jpg", alt="Poplin Cotton Blue")
            p Poplin Cotton Blue
          .item(onclick="changeFabric('poplin-deep-blue')")
            img(src="https://d1fufvy4xao6k9.cloudfront.net/dimg/fabric/shirt/2738_huge_c300.jpg", alt="Poplin Deep Blue")
